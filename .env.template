# AMC-TRADER Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://localhost:5432/amc_trader

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection string for caching and job locking
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# TRADING API CONFIGURATION (REQUIRED)
# =============================================================================
# Alpaca Trading API - Get your keys from https://alpaca.markets/
# For paper trading, use: https://paper-api.alpaca.markets
# For live trading, use: https://api.alpaca.markets
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# =============================================================================
# MARKET DATA API CONFIGURATION (REQUIRED)
# =============================================================================
# Polygon.io API for real-time market data - Get your key from https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# =============================================================================
# AI/ML API CONFIGURATION (OPTIONAL)
# =============================================================================
# Claude API for advanced analysis - Get your key from https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# Twilio for SMS notifications (optional) - Get from https://www.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
ALERT_PHONE_NUMBER=your_phone_number_for_alerts_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment setting (development, staging, production)
ENVIRONMENT=development

# Enable debug logging (true/false)
DEBUG=true

# Application secret key (generate a random string for production)
SECRET_KEY=your_secret_key_here_change_in_production

# CORS origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# DATA CONFIGURATION
# =============================================================================
# Path to stock universe file (stocks to analyze)
UNIVERSE_FILE=data/universe.txt

# Data refresh intervals (in minutes)
DISCOVERY_INTERVAL=5
PORTFOLIO_UPDATE_INTERVAL=15

# =============================================================================
# RISK MANAGEMENT CONFIGURATION
# =============================================================================
# Maximum position size as percentage of portfolio
MAX_POSITION_SIZE=0.1

# Stop loss percentage (0.05 = 5%)
STOP_LOSS_PCT=0.05

# Take profit percentage (0.15 = 15%)  
TAKE_PROFIT_PCT=0.15

# Maximum number of concurrent positions
MAX_POSITIONS=10

# =============================================================================
# DISCOVERY ALGORITHM CONFIGURATION
# =============================================================================
# Minimum volume threshold multiplier
MIN_VOLUME_MULTIPLIER=5.0

# Minimum price change threshold
MIN_PRICE_CHANGE_PCT=0.02

# Maximum price for screening (to filter penny stocks)
MAX_SCREENING_PRICE=50.0

# Minimum market cap (if available)
MIN_MARKET_CAP=100000000

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Enable email notifications (true/false)
EMAIL_NOTIFICATIONS=false

# SMTP configuration for email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
NOTIFICATION_EMAIL=alerts@yourdomain.com

# Enable SMS notifications (true/false)
SMS_NOTIFICATIONS=false

# Enable push notifications (true/false)
PUSH_NOTIFICATIONS=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path (leave empty to log to stdout)
LOG_FILE=

# Enable structured JSON logging (true/false)
JSON_LOGGING=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Number of worker processes for API
WORKER_PROCESSES=4

# API request timeout (seconds)
REQUEST_TIMEOUT=30

# Database connection pool size
DB_POOL_SIZE=10

# Redis connection pool size  
REDIS_POOL_SIZE=10

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable API authentication (true/false)
REQUIRE_AUTH=false

# JWT secret key (for API authentication)
JWT_SECRET=your_jwt_secret_here

# JWT expiration time (seconds)
JWT_EXPIRY=3600

# Rate limiting (requests per minute)
RATE_LIMIT=100

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================
# Enable test mode (uses mock data instead of real API calls)
TEST_MODE=false

# Mock data directory
MOCK_DATA_DIR=tests/mock_data

# Enable API documentation (Swagger/OpenAPI)
ENABLE_DOCS=true

# Enable metrics endpoint
ENABLE_METRICS=true

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Custom screener settings
CUSTOM_SCREENER_ENABLED=false
CUSTOM_SCREENER_CONFIG={}

# Enable backtesting mode
BACKTEST_MODE=false
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31

# Portfolio simulation settings
SIMULATION_INITIAL_CAPITAL=100000
SIMULATION_MODE=false

# =============================================================================
# DEPLOYMENT CONFIGURATION (for production)
# =============================================================================
# Server host and port
HOST=0.0.0.0
PORT=8000

# Frontend build directory
FRONTEND_BUILD_DIR=frontend/dist

# Static files directory
STATIC_FILES_DIR=static

# Upload directory
UPLOAD_DIR=uploads

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================
# Enable health checks
ENABLE_HEALTH_CHECKS=true

# Health check endpoint
HEALTH_CHECK_ENDPOINT=/health

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=false

# Monitoring service URL (if using external monitoring)
MONITORING_URL=

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Enable automatic backups
ENABLE_BACKUPS=false

# Backup directory
BACKUP_DIR=backups

# Backup retention days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# USAGE NOTES
# =============================================================================
# 1. Copy this file to .env: cp .env.template .env
# 2. Replace all placeholder values with your actual configuration
# 3. Keep .env file secure and never commit it to version control
# 4. Required fields are marked as (REQUIRED) in comments
# 5. Optional fields can be left with default values or removed
# 6. For production, change all default passwords and secrets
# 7. Ensure proper file permissions: chmod 600 .env